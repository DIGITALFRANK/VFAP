{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creating Secrets in Secret Manager",
    "Parameters": {
        "Environment": {
            "Description": "The Environment type",
            "Type": "String",
            "AllowedValues": [
                "dev",
                "prod",
                "qa"
            ],
            "ConstraintDescription": "must be a dev, test or prod"
        },
        "ResourceGroup": {
            "Description": "The ResourceGroup Name",
            "Type": "String"
        },
        "Application": {
            "Description": "The Application Name",
            "Type": "String"
        },
        "BusinessOwnerEmail": {
            "Description": "The Business Owner Email",
            "Type": "String"
        },
		"TechOwnerEmail": {
            "Description": "The Technical Owner Email",
            "Type": "String"
        },
		"KMSKeyID": {
            "Description": "The KMS Key ID",
            "Type": "String"
        }		
    },
    "Mappings": {},
    "Resources": {
		"SecretsCreation": {
		  "Type" : "AWS::SecretsManager::Secret",
		  "Properties" : {
			  "Description" : "catchpoint Secrets",
			  "KmsKeyId" : { "Ref": "KMSKeyID" },
			  "Name" : { "Fn::Join": [ "-", [ "vf", { "Ref": "Environment" }, "catchpoint" ] ] },
			  "SecretString" : "{\"client_id\": \"RNJ-To-jTprp1p.BIF\",\"client_secret\": \"80b70c25-afa5-4801-a721-5a8999b2c03a\",\"grant_type\": \"client_credentials\"}",
			  "Tags" : [ 
				  { "Key": "CostCenter", "Value": "118204800" },
				  { "Key": "TechOwnerEmail", "Value": { "Ref": "TechOwnerEmail" } },
				  { "Key": "Environment", "Value": { "Ref": "Environment" } },
				  { "Key": "BusinessOwnerEmail", "Value": { "Ref": "BusinessOwnerEmail" } },
				  { "Key": "ResourceGroup", "Value": { "Ref": "ResourceGroup" } },
				  { "Key": "Application", "Value": { "Ref": "Application" } }
			  ]
			}
		}
	},
	"Outputs" : {
	  "SecretARN" : {
		"Description": "Secret ARN",  
		"Value" : { "Ref" : "SecretsCreation" }
	  }
	}
}